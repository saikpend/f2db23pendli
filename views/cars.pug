extends layout

block content
 h1= title
 - let cars  = results
 div(class="container-fluid")
  div(class="row m-1")
    each item in results
     - let destination1 = `dispatch(\"/cars/update?id=${item._id}\")`
       - let destination2 = `dispatch(\"/cars/create\")`
       - let destination3 = `dispatch(\"/cars/detail?id=${item._id}\")`
       - let destination4 = `dispatch(\"/cars/delete?id=${item._id}\")`
       div(class="col-sm-2") cars Model:#{item.Car_Model}, Car Company:#{item.Car_Company}, cars Cost:#{item.Car_Cost}
        button.btn( class="btn-primary ml-1", onclick= destination2) Create 
        button.btn( class="btn-primary ml-1", onclick= destination1) Update 
        button.btn( class="btn-primary ml-1", onclick= destination3) Detail
        button.btn( class="btn-primary ml-1", onclick= destination4) Delete

  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
    function dispatch(path){ 
      window.location.href=path 
    }  